<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pip.circlerisk" version="1.0.7" android-versionCode="" xmlns="http://www.w3.org/ns/widgets">
    <name>Circle Risk</name>
    <description>
    Circle Risk new version!
    </description>
    <author email="pip.companyinternational@gmail.com" href="">
        Sid (Patrick)
    </author>
     <preference name="Orientation" value="portrait" />
    <preference name="fullscreen" value="true" />

    <preference name="HideKeyboardFromAccessoryBar" value="true" />
<preference name="android-targetSdkVersion" value="29"/>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-fullscreen" />

    <plugin name="cordova-admob-sdk" spec="./plugins/cordova-admob-sdk">
    <variable name="PLAY_SERVICES_VERSION" value = "11.0.4"/>
    </plugin>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
